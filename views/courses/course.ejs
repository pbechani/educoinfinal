<% layout('boilerplate') %>

<div class="container">
<div id="wistia_<%= course.wistiaId %>" class="wistia_embed" style="width:1000px;height:625px;" data-video-width="1000" data-video-height="625">&nbsp;</div>
<script charset="ISO-8859-1" src="//fast.wistia.com/assets/external/playlist-v1.js"></script>
<script>
wistiaPlaylist = Wistia.playlist("<%= course.wistiaId %>", {
  version: "v1",
  theme: "tab",
  videoOptions: {
    volumeControl: true,
    autoPlay: true,
    videoWidth: "1000",
    videoHeight: "625"
  },
  media_0_0: {
    autoPlay: false,
    controlsVisibleOnLoad: false
  }
});
</script>
</div>
